<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lista_embarc"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/lista_embarc_personalizada_imagem"
        android:layout_width="156dp"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="609dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/lista_embarc_personalizada_nome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nome"
            android:textSize="32dp" />

        <TextView
            android:id="@+id/lista_embarc_personalizada_destino"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="destino"
            android:textSize="23dp" />

        <TextView
            android:id="@+id/lista_embarc_personalizada_empresa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="empresa"
            android:textSize="23dp" />

        <TextView
            android:id="@+id/lista_embarc_personalizada_tipo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="tipo"
            android:textSize="23dp" />

    </LinearLayout>

</LinearLayout>